card linux {
  spark file ./zsh.sus
  spark file ./editors.sus

  spark card machine-specific
  spark card kitty
  spark card nixpkgs
}

card machine-specific {
  into ~
  outof linux

  .machinerc
  .profile
}

card kitty {
  into ~/.config/kitty

  .config/kitty/kitty.conf -> kitty.conf
}

card nixpkgs {
  into ~/.config
  outof linux

  nixpkgs
  nix
}
