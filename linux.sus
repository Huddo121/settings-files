card linux {
  spark file ./zsh.sus
  spark file ./editors.sus

  spark card machinerc
  spark card kitty
  spark card nixpkgs
}

card machinerc {
  into ~
  outof linux

  .machinerc
}

card kitty {
  into ~/.config/kitty

  .config/kitty/kitty.conf -> kitty.conf
}

card nixpkgs {
    into ~/.config
    outof linux

    nixpkgs
    nix
}
